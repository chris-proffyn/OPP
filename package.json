{
  "name": "opp",
  "private": true,
  "description": "OPP Darts Training Platform â€” Proffyn RSD",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev -w apps/web",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\" --max-warnings 0",
    "lint:fix": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "format": "prettier --write \"packages/**/*.ts\" \"apps/**/*.{ts,tsx,js,jsx,css,json}\" \".*.{cjs,js,json}\"",
    "format:check": "prettier --check \"packages/**/*.ts\" \"apps/**/*.{ts,tsx,js,jsx,css,json}\" \".*.{cjs,js,json}\"",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  }
}
